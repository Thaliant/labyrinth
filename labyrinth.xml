<?xml version="1.0" standalone="yes"?>
<game>
  <!-- the string identifier for this game -->
  <ident>labyrinth</ident>

  <!-- the controller and manager used for the game -->
  <controller>com.mpgsoft.labyrinth.LabyrinthController</controller>
  <manager>com.mpgsoft.labyrinth.LabyrinthManager</manager>

  <!-- defines how the game is matchmade and configured -->
  <match type="table">
    <min_seats>2</min_seats>
    <max_seats>4</max_seats>
    <start_seats>2</start_seats>
  </match>

  <!-- settings that the user can configure when creating a game -->
  <params>
     <ai ident="aicount" maximum="3"/>
  </params>
</game>
